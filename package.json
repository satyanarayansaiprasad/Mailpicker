{
  "name": "mail-picker",
  "version": "1.0.0",
  "description": "Desktop application to randomly select data from CSV and send emails",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-all": "electron-builder --win --mac",
    "build-script": "node build.js"
  },
  "keywords": ["electron", "csv", "email", "desktop"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "csv-parser": "^3.0.0",
    "nodemailer": "^6.9.7",
    "papaparse": "^5.4.1"
  },
  "build": {
    "appId": "com.mailpicker.app",
    "productName": "Mail Picker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "renderer.js",
      "package.json",
      "!node_modules/**/*",
      "!dist/**/*",
      "!*.md",
      "!*.bat",
      "!*.sh",
      "!build.js",
      "!sample_contacts.csv",
      "!share-package/**/*",
      "!release-package/**/*"
    ],
    "compression": "maximum",
    "removePackageScripts": true,
    "removePackageKeywords": true,
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "compression": "maximum"
    },
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName} Setup ${version}.${ext}",
      "publisherName": "Mail Picker",
      "verifyUpdateCodeSignature": false,
      "compression": "maximum"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Mail Picker"
    }
  }
}
